{
  "version": 2,
  "cli": {
    "defaultCollection": "@nrwl/web"
  },
  "defaultProject": "web-components",
  "generators": {
    "@nrwl/web:application": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/web:library": {
      "style": "scss",
      "linter": "eslint",
      "unitTestRunner": "jest"
    }
  },
  "projects": {
    "web-components": {
      "projectType": "application",
      "root": "apps/web-components",
      "sourceRoot": "apps/web-components/src",
      "targets": {
        "build": {
          "executor": "@nrwl/web:build",
          "outputs": ["{options.outputPath}"],
          "options": {
            "outputPath": "dist/apps/web-components",
            "index": "apps/web-components/src/index.html",
            "main": "apps/web-components/src/main.ts",
            "polyfills": "apps/web-components/src/polyfills.ts",
            "tsConfig": "apps/web-components/tsconfig.app.json",
            "assets": [
              "apps/web-components/src/favicon.ico",
              "apps/web-components/src/assets"
            ],
            "styles": ["apps/web-components/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "fileReplacements": [
                {
                  "replace": "apps/web-components/src/environments/environment.ts",
                  "with": "apps/web-components/src/environments/environment.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "extractLicenses": true,
              "vendorChunk": false,
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "2mb",
                  "maximumError": "5mb"
                }
              ]
            }
          }
        },
        "serve": {
          "executor": "@nrwl/web:dev-server",
          "options": {
            "buildTarget": "web-components:build"
          },
          "configurations": {
            "production": {
              "buildTarget": "web-components:build:production"
            }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/web-components/**/*.ts"]
          }
        },
        "test": {
          "executor": "@nrwl/jest:jest",
          "outputs": ["coverage/apps/web-components"],
          "options": {
            "jestConfig": "apps/web-components/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    },
    "web-components-e2e": {
      "root": "apps/web-components-e2e",
      "sourceRoot": "apps/web-components-e2e/src",
      "projectType": "application",
      "targets": {
        "e2e": {
          "executor": "@nrwl/cypress:cypress",
          "options": {
            "cypressConfig": "apps/web-components-e2e/cypress.json",
            "tsConfig": "apps/web-components-e2e/tsconfig.e2e.json",
            "devServerTarget": "web-components:serve"
          },
          "configurations": {
            "production": {
              "devServerTarget": "web-components:serve:production"
            }
          }
        },
        "lint": {
          "executor": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": ["apps/web-components-e2e/**/*.{js,ts}"]
          }
        }
      }
    }
  }
}
